<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout_root"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="10dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/edit_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favourite Edit"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:layout_centerInParent="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/edit_fav2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Title: "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/edit_favName"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:hint=""
            android:maxLength="15">
            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/edit_fav3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus No   : "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/edit_fav4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#7b7474" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/buz_delete"
                android:id="@+id/imageDel" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/delCheckBox"
                android:textColor="#c60000" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/buz_cancel"
                android:id="@+id/imageCancel"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="90dp" />
            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/buz_save"
                android:id="@+id/imageSave"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>